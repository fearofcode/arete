# !/bin/bash

read -r -p "This will destroy the local database. Are you sure? [y/N] " response
case $response in
    [yY][eE][sS]|[yY])
        cp /Users/warren/Dropbox/arete/arete_backup.sql arete_backup.sql
        dropdb -U postgres arete && createdb -U postgres arete && psql -U postgres -d arete -f arete_backup.sql
        ;;
    *)
        echo "Exiting."
        ;;
esac
